<%= form_with model: @user do |form| %>
  <% @user.errors.full_messages.each do |message| %>
    <div><%= message %></div>
  <% end %>

  <%= form.label :username, "Your username here:" %>
  <%= form.text_field :username, value: "what a wacky name" %>
  
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "example@example.com" %>
  
  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit %>
<% end %>